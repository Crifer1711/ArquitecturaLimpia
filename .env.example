# Variables de entorno para desarrollo
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Servidor
HOST=0.0.0.0
PORT=5000

# Modo de comunicación: http, mensajeria, hibrido
MODO_COMUNICACION=mensajeria

# URLs de servicios externos (para modo HTTP)
PEDIDOS_SERVICE_URL=http://localhost:5001
TRANSPORTISTAS_SERVICE_URL=http://localhost:5002

# RabbitMQ (para modo mensajería)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
USAR_MENSAJERIA_SIMULADA=True

# CORS
CORS_ORIGINS=*
